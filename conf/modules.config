process {
    withName: PREFETCH {
        ext.args = ""
    }

    withName: FASTERQ_DUMP {
        ext.args = ""
        publishDir = [
            path: { "${params.outdir}/SRA/" },
            mode: params.publish_dir_mode
        ]
    }

    withName: GET_ENA {
        ext.args = ""
        ext.ftp = "ftp://ftp.sra.ebi.ac.uk/vol1"
        publishDir = [
            path: { "${params.outdir}/ENA/" },
            mode: params.publish_dir_mode
        ]
    }

    withName: GET_GEO {
        ext.args = ""
        publishDir = [
            path: { "${params.outdir}/GEO/" },
            mode: params.publish_dir_mode
        ]
    }
}